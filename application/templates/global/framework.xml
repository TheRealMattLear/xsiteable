<?xml version="1.0" encoding="UTF-8"?>

<nut:template
    xmlns:nut="http://schema.shelter.nu/nut"
    xmlns:form="http://schema.shelter.nu/nut-form"
>
    <html>
        <nut:import template="global/framework_head" />
        <body>
            <nut:import template="global/banner-top" />
            <nut:import template="global/banner-bar" />

            <div class="ui-tabs ui-widget ui-widget-content" id="tabs" style="padding:0 !important;margin:0 !important;border:none !important;">

                <ul class="ui-tabs-nav ui-helper-reset ui-helper-clearfix ui-widget-header">
                    <nut:for-each select="$menu/main">
                        <li class="ui-state-default ui-corner-top{#if $rest/concept=$item/@path ' ui-tabs-selected ui-state-active'}">
                            <nut:if value-of="$item/@popup" unlike="''"><a target="_blank" href="{$item/@popup}">{$item/@label}</a></nut:if>
                            <nut:if value-of="$item/@popup" like="''"><a href="{$dir/home}/{$item/@path}">{$item/@label}</a></nut:if>
                            <nut:if count="*" unlike="0">
                                <button id="menu-{$item/@name}" class="ui-button ui-widget ui-state-default ui-corner-all" style="padding:1px 2px;margin:2px 3px;" role="button" aria-disabled="false" title="Menu">
                                    <a style="margin:0;padding:0;" href="#"><span class="ui-button-icon-primary ui-icon ui-icon-triangle-1-s"></span></a>
                                </button>
                                <nut:create-menu for="#menu-{$item/@name}" />
                            </nut:if>
                        </li>
                    </nut:for-each>
                </ul>
                
                <div id="utilities">
                    <div id="search">
                        <form action="{$dir/home}/search" method="get">
                            <input class="as-input" id="searchbox" name="searchquery" title="Search our documents" value="{$request/searchquery}" />
                        </form>
                    </div>
                    <div id="phone">
                        <input class="as-input" id="lut" title="Search phone directory" autocomplete="off" />
                    </div>
                    <div style="clear:both;"> </div>
                </div>
                
                <!-- Here we go! All other templates run from here! -->
                <nut:apply-templates select="$page/template" />

                <div id="columns">
                    <ul id="column0" class="column">
                        <nut:plugins event="XS_GUI_SECTION_DEBUG" />
                    </ul>
                </div>
                
            </div>

            <!-- <nut:import template="global/banner-bottom-menu" /> -->
            <nut:import template="global/banner-bottom" />

            <nut:plugins event="XS_GUI_JS_END" />

            <nut:plugins event="XS_GUI_BODY_END" />
            
            <!-- generic content block for various editing purposes -->
            <div id="xs-generic-content" style="display:none;" title="Editing content">
            </div>

        </body>
    </html>

</nut:template>